<h2>ログインしてください</h2>

<%= form_with model: User.new, url: user_session_path, method: :post, remote: true do |f| %>

<div class= "contents">
  <div class="form-group">
    <%= f.text_field :patient_id, class: 'form-control', placeholder:"例) 51XXXXXX" %>
    <%= f.text_field :birth_date, class: 'form-control', placeholder:"生年月日8桁　20100101" %>
  </div>

  <div class="actions">
    <%= f.submit 'login', class: 'btn btn-primary' %>
  </div>
</div>
<% end %>

<%= render "devise/shared/links" %>
