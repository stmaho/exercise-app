<h2>ログインしてください</h2>

<%= form_with model: @user, url: user_session_path, method: :post do |f| %>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class= "contents">
  <div class="form-group">
    <%= f.label :patient_id, "患者ID" %>
    <%= f.text_field :patient_id, class: 'form-control', placeholder:"例) 51XXXXXX" %><br>
    <%= f.label :birth_date, "生年月日" %>
    <%= f.text_field :birth_date, class: 'form-control', placeholder:"生年月日8桁　20100101" %>
  </div>

  <div class="actions">
    <%= f.submit 'login', class: 'btn btn-primary' %>
  </div>
</div>
<% end %>

