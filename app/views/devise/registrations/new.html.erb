<h2>Sign up</h2>

<%= form_with model: @user, url: user_registration_path, method: :post do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :patient_id %>
    <%= f.text_field :patient_id, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :birth_date %>
    <%= f.text_field :birth_date, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit '新規登録', class: 'btn btn-primary' %>
    <%= f.submit '編集する', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
